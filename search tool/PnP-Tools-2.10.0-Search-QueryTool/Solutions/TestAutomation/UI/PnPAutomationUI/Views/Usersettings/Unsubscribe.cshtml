@model PnPAutomationUI.Models.EmailConfirmation

<link rel="stylesheet" href="~/Content/fabric.min.css" />
<link rel="stylesheet" href="~/Content/fabric.components.min.css" />
<link rel="stylesheet" href="~/Content/Configuration.css" />
<script src="~/Scripts/Usersettings.js"></script>
@{
    ViewBag.Title = "Unsubscribe";
}

<div>
    <div class="ms-font-su ms-fontColor-themePrimary ms-fontWeight-semibold" style="text-align: center">Unsubscribe</div>
    <br />
    @{ string unsubscribeMessage = string.Empty;}
    @if (Model.Email != null)
    {
        unsubscribeMessage = "Your email " + Model.Email + " is sucessfully unsubscribed from PnP daily test results report";
    }
    else
    {
        unsubscribeMessage = "Sorry, we are unable to verify/confirm your email " + Model.Email ;
    }
    <div style="width: 70%; margin: auto" class="ms-Grid">
        <div class="ms-Grid-row">
            @unsubscribeMessage
        </div>
    </div>
</div>
